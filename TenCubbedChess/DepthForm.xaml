<Window x:Class="TenCubbedChess.DepthForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenCubbedChess"
        mc:Ignorable="d"
        Title="Depth" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Please choose a depth for the AI" HorizontalAlignment="Left" Margin="59,10,0,0" VerticalAlignment="Top" Height="30" Width="182" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbDepth" HorizontalAlignment="Left" Margin="10,39,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="122" Height="28" Grid.Column="1" SelectionBrush="#FF4B00D4" Background="#FF7ECDE8" BorderBrush="Black" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" Padding="0,5,0,0"/>
        <Button x:Name="btnOK" Grid.Column="1" Content="OK" HorizontalAlignment="Left" Height="18" Margin="51,80,0,0" VerticalAlignment="Top" Width="40" Click="btnOK_Click" Background="#FF9C9791" BorderBrush="#FF0C0606"/>
    </Grid>
</Window>
